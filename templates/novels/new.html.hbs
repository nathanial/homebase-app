<div class="novels-container">
  <div class="novels-header">
    <h1>New Graphic Novel</h1>
  </div>

  <form method="POST" action="/novels" class="novel-form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" required placeholder="My Graphic Novel" class="form-input">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="3" placeholder="A story about..." class="form-input"></textarea>
    </div>
    <div class="form-actions">
      <a href="/novels" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Create Novel</button>
    </div>
  </form>
</div>
